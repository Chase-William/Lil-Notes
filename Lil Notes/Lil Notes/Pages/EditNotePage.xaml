<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns        ="http://xamarin.com/schemas/2014/forms"
             xmlns:x      ="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d      ="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc     ="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable ="d"
             x:Class      ="Lil_Notes.EditNotePage">

    <!-- Toolbar for app -->
    <ContentPage.ToolbarItems>

        <!-- Item on bar for creating new notes -->
        <ToolbarItem Text="Finsihed"
                     Icon="finished_icon.png"  
                     Priority="0"  
                     Order="Primary"
                     Clicked="OnFinishedBtnClicked"/>

    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="10">

            <!-- Uses a larger version of the icon -->
            <Image Source="{Binding IconPath, StringFormat='{0}2x'}" 
                   Margin="10"
                   WidthRequest="140"/>
            
            <Label Text="Name:"/>
            <Entry x:Name="NameEntry" Text="{Binding Name}"/>

            <Label Text="Notes:"/>
            
            <Entry x:Name="ContentEntry" Text="{Binding Content}"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>   